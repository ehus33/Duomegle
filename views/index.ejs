<html>
  <head>
    <title>Video calls</title>
    <link rel="stylesheet" href="/w3.css"/>
  </head>
  <body>
    <div id="google_translate_element"></div>

    <script type="text/javascript">
      function googleTranslateElementInit() {
        new google.translate.TranslateElement({pageLanguage: 'en', layout: google.translate.TranslateElement.InlineLayout.SIMPLE}, 'google_translate_element');
      }
    </script>
    
    <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit">
    </script>
    <h1 class="w3-center w3-jumbo">Video calls</h1>
    <form class="w3-margin w3-border w3-border-gray w3-padding" style="display:flex;justify-items:center;gap:2rem;align-items:center" action="/room" method="POST">
      <input class="w3-input w3-border w3-border-gray" placeholder="Enter the Language for Your Room" name="roomid"/>
      <button class="w3-button w3-blue w3-hover-blue" type="submit">Join / Create room</button>
    </form>
  </body>
</html>